@model IEnumerable<MagCourses.Models.Enrollment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Enrollments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Subject
        </th>
        <th>
            Student
        </th>
        <th>
            Grade
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Course.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Subject.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Student.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Grade)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
        @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
    </td>
</tr>
}

</table>
