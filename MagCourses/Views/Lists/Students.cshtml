@model IEnumerable<MagCourses.Models.StudentDetail>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students Grades</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentSubjectGrade)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @foreach (var grades in item.StudentSubjectGrade)
            {
                @grades.ToString() <br />
            }
        </td>
    </tr>
}

</table>
